@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="TestimonialId" />
							<lable>Başlık</lable>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<lable>İsim Soyisim</lable>
							<input type="text" asp-for="NameSurname" class="form-control" />
							<br />
							<lable>Açıklama</lable>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<lable>Resim Yolu</lable>
							<input type="text" asp-for="IamgeUrl" class="form-control" />
							<button class="btn btn-primary">Referans Ekle</button>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>