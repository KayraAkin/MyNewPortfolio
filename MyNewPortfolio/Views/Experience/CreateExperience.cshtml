@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>CreateExperience</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<lable>Firma Bilgisi</lable>
							<input type="text" asp-for="Head" class="form-control"/>
							<br />
							<lable>Çalışılan Pozisyon</lable>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<lable>Tarih Aralığı</lable>
							<input type="text" asp-for="Date" class="form-control" />
							<br />
							<lable>Açıklama</lable>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-primary">Deneyimi Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>