@model Contact

@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişimLer</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<lable>Başlık</lable>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<lable>Açıklama</lable>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<lable>Telefon 1</lable>
							<input type="text" asp-for="Phone1" class="form-control" />
							<br />
							<lable>Telefon 2</lable>
							<input type="text" asp-for="Phone2" class="form-control" />
							<br />
							<lable>E-Mail 1</lable>
							<input type="text" asp-for="Email1" class="form-control" />
							<br />
							<lable>E-mail 2</lable>
							<input type="text" asp-for="Email2" class="form-control" />
							<br />
							<lable>Adres</lable>
							<input type="text" asp-for="Address" class="form-control" />
							<br />
							<button class="btn btn-primary">İletişim Ekle</button>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>