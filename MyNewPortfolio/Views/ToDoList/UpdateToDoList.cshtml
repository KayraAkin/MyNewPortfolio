@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacak Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="ToDoListId" />
							<lable>Başlık & İçerik</lable>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<lable>Tarih</lable>
							<input type="date" asp-for="Date" class="form-control" />
							<br />
							<lable>Görsel Yolu</lable>
							<input type="text" asp-for="ImageUrl" class="form-control" />

							<button class="btn btn-success">Yapılacak İşi Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>