@model Portfolio

@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Projeler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<lable>Başlık</lable>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<lable>Alt Başlık</lable>
							<input type="text" asp-for="Subtitle" class="form-control" />
							<br />
							<lable>Açıklama</lable>
							<textarea rows="4" asp-for="Description" class="form-control"></textarea>
							<br />
							<lable>Resim Linki</lable>
							<input type="text" class="form-control" asp-for="ImageUrl"/>
							<br />
							<lable>Proje Linki</lable>
							<input type="text" class="form-control" asp-for="Url" />
							<br />
							<button class="btn btn-primary">Proje Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>