@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>UpdatePortfolio</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Projeler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="PortfolioId" />
							<lable>Başlık</lable>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<lable>Alt Başlık</lable>
							<input type="text" asp-for="Subtitle" class="form-control" />
							<br />
							<lable>Açıklama</lable>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<label>Resim Linki</label>
							<input type="text" class="form-control" asp-for="ImageUrl" />
							<br />
							<label>Proje Linki</label>
							<input type="text" class="form-control" asp-for="Url" />
							<button class="btn btn-warning">Proje Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>